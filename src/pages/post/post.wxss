page {
 background-color: #ededed;
}

swiper {
  width: 100%;
  height: 500rpx;
}

swiper image {
  width: 100%;
  height: 500rpx;
}

.post-item {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
}

.post-meta {
  flex-direction: row;
  margin: 10rpx 0 10rpx 10rpx;
}

.post-meta .avatar {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.post-meta text {
  font-size: 26rpx;
  vertical-align: middle;
  color: #333;
}

.post-item image {
  width: 100%;
  margin-bottom: 10rpx;
}

.post-item .desc {
  font-size: 28rpx;
  padding: 0 15rpx;
  color: #666;
}

.post-kpi {
  display: flex;
  flex-direction: row;
  margin: 10rpx 0 10rpx 10rpx;
  height: 16px;
  align-items: center;
}

.post-kpi image {
  width: 16px;
  height: 16px;
  margin-right: 10rpx;
}

.post-kpi text {
  font-size: 18rpx;
  color: #333;
  margin-right: 20px;
}