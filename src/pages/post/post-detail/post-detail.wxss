.post-container {
  display: flex;
  flex-direction: column;
}

.post-header-img {
  width: 100%;
  height: 460rpx;
}

.audio {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  top: 185rpx;
  left: 50%;
  margin-left: -60rpx;
  opacity: 0.7;
}

.post-meta-info {
  flex-direction: row;
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  color: #666;
  font-weight: 300;  
}

.post-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 20rpx;  
}

.post-author {
  vertical-align: middle;
  margin-right: 20rpx;
  color: #666;
  font-weight: 800;
}

.post-publish-at {
  color: #999;
  margin-right: 20rpx;
  vertical-align: middle;
}

.post-date {
  vertical-align: middle;
  color: #999;
}

.post-title {
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 1.5px;
  color: #4b556c;
}

.post-toolbar {
  margin-top: 20rpx;
}

.post-icons {
  float: right;
  margin-right: 40rpx;
}

.post-icons image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  padding: 20rpx;
  margin-left: 30rpx;
  vertical-align: middle;  
}

.icon-share {
  background-color: #1296db;
}

.icon-bookmark {
  background-color: #3aa7a2;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 40rpx;
  margin: 0 auto;
  z-index: -99;
}

.post-detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 1.5em;
  font-size: 28rpx;
}