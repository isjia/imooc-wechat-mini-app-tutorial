page {
  height: 100%;
  background-color: #b3d4db;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  font-family: 'Microsoft Yahei';
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-nickname {
  color: black;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.usermotto {
  margin-top: 200px;
  font-size: 22rpx;
  color: #405f80;
  border: 1px solid #405f80;
  border-radius: 5px;
  width: 200rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}